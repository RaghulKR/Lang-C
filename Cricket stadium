#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {
    int length, breadth;

    // Read the length and breadth of the ground
    scanf("%d", &length);
    scanf("%d", &breadth);

    // Calculate the perimeter (length of the rope)
    int perimeter = 2 * (length + breadth);

    // Calculate the area (quantity of carpet required)
    int area = length * breadth;

    // Print the perimeter and area
    printf("%d\n", perimeter);
    printf("%d\n", area);

    return 0;
}
